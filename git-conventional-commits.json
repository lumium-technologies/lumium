{
    "convention": {
        "commitTypes": [
            "feat",
            "fix",
            "perf",
            "refactor",
            "style",
            "test",
            "build",
            "ops",
            "docs",
            "chore",
            "merge",
            "revert",
            "deps"
        ],
        "commitScopes": [],
        "releaseTagGlobPattern": "[0-9]*.[0-9]*.[0-9]*",
        "issueRegexPattern": "(^|\\s)#\\d+(\\s|$)"
    },
    "changelog": {
        "commitTypes": [
            "feat",
            "fix",
            "perf",
            "merge"
        ],
        "includeInvalidCommits": false,
        "commitIgnoreRegexPattern": "^WIP ",
        "headlines": {
            "feat": "Features",
            "fix": "Bug Fixes",
            "perf": "Performance Improvements",
            "merge": "Merged Branches",
            "breakingChange": "BREAKING CHANGES"
        },
        "commitUrl": "https://github.com/lumium-technologies/lumium/commit/%commit%",
        "commitRangeUrl": "https://github.com/lumium-technologies/lumium/compare/%from%...%to%?diff=split",
        "issueUrl": "https://github.com/lumium-technologies/lumium/issues/%issue%"
    }
}
