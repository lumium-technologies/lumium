{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "sourceMap": true,
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "noImplicitAny": false,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "baseUrl": ".",
        "paths": {
            "@public/*": [
                "public/*"
            ],
            "@public": [
                "public"
            ],
            "@i18n": [
                "./i18n"
            ],
            "@test/*": [
                "test/*"
            ],
            "@test": [
                "test"
            ],
            "@types/*": [
                "types/*"
            ],
            "@types": [
                "types"
            ],
            "@routes/*": [
                "routes/*"
            ],
            "@routes": [
                "routes"
            ]
        },
        "incremental": true
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "test/*",
        "cypress/*"
    ]
}
