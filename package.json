{
    "name": "lumium",
    "version": "0.4.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/lumium-technologies/lumium"
    },
    "author": "Cedric Schwyter <cedricschwyter@bluewin.ch>",
    "license": "GPL-3.0-or-later",
    "bugs": {
        "url": "https://github.com/lumium-technologies/lumium/issues"
    },
    "homepage": "https://lumium.space",
    "description": "next level docs",
    "private": true,
    "scripts": {
        "test": "set -e; (cd lumium-api && yarn test) && (cd lumium-space && yarn run cypress:test) && (cd lumium-renderer && wasm-pack test --chrome --headless)",
        "build": "./scripts/build.sh",
        "start": "concurrently -n lumium-space,lumium-api \"cd lumium-space && yarn start\" \"cd lumium-api && yarn start\"",
        "dev": "concurrently -n lumium-space,lumium-api \"cd lumium-space && yarn run dev\" \"cd lumium-api && yarn run dev\"",
        "db:migrate": "cd lumium-api && yarn run db:migrate",
        "preinstall": "cd lumium-space && yarn run lumium-renderer:package",
        "heroku-prebuild": "cd lumium-space && yarn run lumium-renderer:package",
        "prepare": "husky install"
    },
    "workspaces": [
        "lumium-space",
        "lumium-api"
    ],
    "devDependencies": {
        "@types/jest": "^29.0.3",
        "@types/node": "17.0.40",
        "git-conventional-commits": "^2.1.1",
        "husky": "^8.0.0",
        "ts-node": "10.8.1",
        "typescript": "4.7.3"
    },
    "dependencies": {
        "child_process": "1.0.2",
        "heroku-client": "3.1.0"
    },
    "resolutions": {
        "@types/react": "17.0.15"
    }
}
