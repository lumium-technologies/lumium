{
    "extends": "@nrwl/workspace/presets/npm.json",
    "npmScope": "lumium",
    "tasksRunnerOptions": {
        "default": {
            "runner": "@nrwl/nx-cloud",
            "options": {
                "cacheableOperations": [
                    "build",
                    "test",
                    "lint",
                    "package",
                    "prepare"
                ]
            }
        }
    },
    "targetDependencies": {
        "build": [
            {
                "target": "build",
                "projects": "dependencies"
            }
        ],
        "prepare": [
            {
                "target": "prepare",
                "projects": "dependencies"
            }
        ],
        "package": [
            {
                "target": "package",
                "projects": "dependencies"
            }
        ]
    },
    "affected": {
        "defaultBase": "master"
    },
    "pluginsConfig": {
        "@nrwl/js": {
            "analyzeSourceFiles": false
        }
    }
}
