        "heroku-postgresql:mini",
        {
            "plan": "heroku-redis:mini",
            "options": {
                "policy": "allkeys-lru"
            }
        }
    ],
    "buildpacks": [{
            "url": "https://github.com/heroku/heroku-buildpack-apt.git"
        },
        {
            "url": "https://github.com/dmathieu/heroku-buildpack-submodules.git"
        },
        {
            "url": "heroku-community/cli"
        },
        {
